<%= form_for(@employee) do |f| %>

  <%= f.fields_for(:profile_attributes) do |pf| %>
    <%= pf.label :height %>
    <%= pf.text_field :height %>

    <br>

    <%= pf.label :age %>
    <%= pf.text_field :age %>

    <br>

    <%= pf.label :favorite_food %>
    <%= pf.text_field :favorite_food %>

    <br>

    <%= pf.label :favorite_day %>
    <%= pf.text_field :favorite_day %>

    <br>

    <%= pf.label :date_of_birth %>
    <%= pf.text_field :date_of_birth %>

    <br>

    <%= pf.label :salary %>
    <%= pf.text_field :salary %>

    <br>

    <%= pf.label :photo %>
    <%= pf.text_field :photo %>

    <br>
  <% end %>

  <%= f.submit "Add Employee" %>

<% end %>